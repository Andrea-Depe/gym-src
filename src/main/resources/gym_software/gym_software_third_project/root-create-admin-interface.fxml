<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="600.0" prefWidth="1200.0" stylesheets="@style.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="gym_software.gym_software_third_project.controller.RootAdminController">
   <children>
      <VBox alignment="CENTER" layoutX="365.0" layoutY="80.0" prefHeight="440.0" prefWidth="469.0" spacing="20.0">
          <padding>
              <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
          </padding>
      
          <Label text="Creation of a new user" />
          <HBox spacing="10">
              <Label text="Codice Fiscale:" />
              <TextField fx:id="CFTextField" prefHeight="37.0" prefWidth="283.0" promptText="Inserisci il codice fiscale" />
          </HBox>
          <HBox spacing="10">
              <Label text="Nome:" />
              <TextField fx:id="NameTextField" prefHeight="37.0" prefWidth="344.0" promptText="Inserisci il nome" />
          </HBox>
          <HBox spacing="10">
              <Label text="Cognome:" />
              <TextField fx:id="SurnameTextField" prefHeight="37.0" prefWidth="317.0" promptText="Inserisci il cognome" />
          </HBox>
          <Button fx:id="createAdminButton" onAction="#createInstructor" text="Crea" />
         <Button fx:id="GoBackButton" mnemonicParsing="false" onAction="#handleBackButtonClick" text="back" />
      </VBox>
   </children>
</AnchorPane>
