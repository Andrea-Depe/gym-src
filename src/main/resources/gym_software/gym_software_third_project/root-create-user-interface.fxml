<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="600.0" prefWidth="1200.0" stylesheets="@style.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="gym_software.gym_software_third_project.controller.RootUserController">
   <children>
      <VBox alignment="CENTER" layoutX="343.0" layoutY="44.0" prefHeight="512.0" prefWidth="514.0" spacing="20.0">
          <padding>
              <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
          </padding>
      
          <Label text="Creation of a new user" />
          <HBox spacing="10">
              <Label text="Codice Fiscale:" />
              <TextField fx:id="CFTextField" prefHeight="37.0" prefWidth="337.0" promptText="Inserisci il codice fiscale" />
          </HBox>
          <HBox spacing="10">
              <Label text="Nome:" />
              <TextField fx:id="NameTextField" prefHeight="37.0" prefWidth="396.0" promptText="Inserisci il nome" />
          </HBox>
          <HBox spacing="10">
              <Label text="Cognome:" />
              <TextField fx:id="SurnameTextField" prefHeight="37.0" prefWidth="371.0" promptText="Inserisci il cognome" />
          </HBox>
          <HBox spacing="10">
              <Label text="Peso:" />
              <TextField fx:id="PesoTextField" prefHeight="37.0" prefWidth="407.0" promptText="Inserisci il peso" />
          </HBox>
          <HBox spacing="10">
              <Label text="Altezza:" />
              <TextField fx:id="AltezzaTextField" prefHeight="37.0" prefWidth="389.0" promptText="Inserisci l'altezza" />
          </HBox>
          <HBox spacing="10">
              <Label text="Età:" />
              <TextField fx:id="AgeTextField" prefHeight="37.0" prefWidth="420.0" promptText="Inserisci l'età" />
          </HBox>
          <HBox spacing="10">
              <Label text="Istruttore" />
              <ComboBox fx:id="InstructorComboBox" layoutX="20.0" layoutY="20.0" prefHeight="25.0" prefWidth="377.0" />
          </HBox>
          <Button fx:id="createUserButton" onAction="#createUser" text="Crea" />
      </VBox>
      <Button fx:id="GoBackButton" layoutX="562.0" layoutY="556.0" mnemonicParsing="false" onAction="#handleBackButtonClick" text="back" />
   </children>
</AnchorPane>
